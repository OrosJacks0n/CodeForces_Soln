#include<bits/stdc++.h>
using namespace std;
int main(){ 

    // clock_t tStart = clock();
    int n; 
    cin >> n;

    string s;
    for(int i = 0; i < n; i++){
        cin >> s;
        if(s.length() <= 10) cout << s << endl;
        else{
            cout << s[0] + to_string(s.length() - 2) + s[s.length()-1] << endl;
        }
    }
    

    // cout << endl << (double)(clock() - tStart)/CLOCKS_PER_SEC <<  "sec"; 


return 0;
}
